<!DOCTYPE html>
<html lang="en">
<head>
  <title>Employee Management</title>
</head>
<body>
  <h1>EMPLOYEE DATABASE</h1>
  <h2>Total Employees: <%= count %></h2>

  <!-- Employee Table -->
  <table border="1" cellpadding="10">
    <thead>
      <tr>
        <th>Name</th>
        <th>Department</th>
        <th>Designation</th>
        <th>Salary</th>
        <th>Joining Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% employee.forEach(employee => { %>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.department %></td>
          <td><%= employee.designation %></td>
          <td><%= employee.salary %></td>
          <td><%= employee.joiningDate.toDateString() %></td>
          <td>
            <form action="/delete/<%= employee._id %>" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

   <!-- Add Employee Form -->
   <h3>Add Employee</h3>
   <form action="/add" method="POST">
     <input type="text" name="name" placeholder="Name" required />
     <input type="text" name="department" placeholder="Department" required />
     <input type="text" name="designation" placeholder="Designation" required />
     <input type="number" name="salary" placeholder="Salary" required />
     <input type="date" name="joiningDate" required />
     <button type="submit">Add</button>
   </form>

  <!-- Update Employee Form -->
  <h3>Update Employee</h3>
  <form action="/update" method="POST">
    <input type="text" name="name" placeholder="Enter Existing Name" required />
    <input type="text" name="department" placeholder="New Department" required />
    <input type="text" name="designation" placeholder="New Designation" required />
    <input type="number" name="salary" placeholder="New Salary" required />
    <input type="date" name="joiningDate" required />
    <button type="submit">Update</button>
  </form>
</body>
</html>
